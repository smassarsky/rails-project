<%= form_for :user, html: {class: "form-signin text-center"} do |f| %>

  <h1 class="h3 mb-3 font-weight-normal"><%= header_text %></h1>

  <% if user_errors? %>
    <div class="text-danger">Could not create User</div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control#{' is-invalid' if user_errors?(:name)}", placeholder: "Name" %>
    <%= user_errors(:name) %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "form-control#{' is-invalid' if user_errors?(:email)}", placeholder: "Email" %>
    <%= user_errors(:email) %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control#{' is-invalid' if user_errors?(:password)}", placeholder: "Password" %>
    <%= user_errors(:password) %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control#{' is-invalid' if user_errors?(:password_confirmation)}", placeholder: "Password Confirmation" %>
    <%= user_errors(:password_confirmation) %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>