<%= form_for :user, html: {class: "form-signin text-center"} do |f| %>

  <h1 class="h3 mb-3 font-weight-normal"><%= header_text %></h1>

  <% if errors?(user) %>
    <div class="text-danger">Could not create User</div>
  <% end %>

  <div class="form-group">
    <%= f.label :name, class: "sr-only" %>
    <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
    <%= errors(user, :name) %>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "sr-only" %>
    <%= f.text_field :email, class: "form-control", placeholder: "Email" %>
    <%= errors(user, :email) %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
    <%= errors(user, :password) %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %>
    <%= errors(user, :password_confirmation) %>
  </div>
  <%= f.submit class: "btn btn-primary" %>
<% end %>