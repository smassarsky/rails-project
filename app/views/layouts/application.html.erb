<!DOCTYPE html>
<html>
  <head>
    <title>RailsProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
      <% if is_logged_in? %>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

          <%= link_to "Dashboard", dashboard_path, class: "navbar-brand" %>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>

          <div class="collapse navbar-collapse" id="navbar">
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "Matchups", matchups_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Join Matchup", new_user_matchup_path, class: "nav-link" %>
              </li>
            </ul>
            <span class="navbar-text">
              Hi, <%= current_user.name %>
            </span>
            <ul class="navbar-nav px-3">
              <li class="nav-item text-nowrap">
                <%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %>
              </li>
            </ul>
          </div>

        </nav>
      <% end %>

    <div class="container-fluid">
      <%= yield %>
    </div>

  </body>
</html>
