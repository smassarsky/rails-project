<div class="row mb-3">
  <% @matchup.user_matchups.each do |user_matchup| %>
    <div class="col-lg-6">
      <div class="card mb-3">
        <div class="card-body">
          <h4 class="card-title text-center"><%= user_matchup.display_name %></h4>
          <% if !user_matchup.picks.empty? %>
            <table class="table">
              <thead>
                <th>Player</th>
                <th>Games Played</th>
                <th>Points</th>
                <th>Goals</th>
                <th>Assists</th>
              </thead>
              <tbody>
                <% user_matchup.picks.each do |pick| %>
                  <% stats = pick.player.regular_season_stats_hash(matchup.season) %>
                  <td><%= pick.player.name %></td>
                  <td><%= stats[:games_played] %></td>
                  <td><%= stats[:points] %></td>
                  <td><%= stats[:goals] %></td>
                  <td><%= stats[:assists] %></td>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <h5>No picks yet.<h5>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="col text-center"><i>* Stats from current season relevant to matchup</i></div>

</div>