<div class="mt-3 text-center ">
  <div class="row justify-content-center">
    <h2><%= matchup.name %></h2>

  </div>

  <div class="row justify-content-center">
    <p class="col-md-3 text-center">Start Date: <%= date_format(matchup.start_date) %></p>
    <p class="col-md-3 text-center">End Date: <%= date_format(matchup.end_date) %></p>
  </div>
  <div class="row justify-content-center">
    <p class="col-md-3 text-center">Team: <%= matchup.team.full_team_name %></p>
    <p class="col-md-2 text-center">Owner: <%= matchup.owner.name %></p>
    <p class="col-md-2 text-center">Status: <%= matchup.status %></p>
  </div>
  <% if matchup.status == "Complete" %>
    <h6><%= matchup.winner %></h6>
  <% elsif matchup.status == "Draft" %>
    <h6>Draft Order</h6>
    <p><%= matchup.draft_order %></p>
    <h6>Next Pick</h6>
    <p><%= matchup.whose_pick?.display_name %></p>
  <% end %>
</div>
